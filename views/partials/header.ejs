<!DOCTYPE html>
<html>
  <head>
    <script
      src="https://kit.fontawesome.com/bc5e44e555.js"
      crossorigin="anonymous"
    ></script>
    <!-- Make site responsive on mobile/tablet -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>YelpRecord</title>
    <link rel="stylesheet" href="/app.css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link href="/stylesheets/main.css" rel="stylesheet" />
  </head>
  <body>
    <!-- some comment -->
    <!-- some comment -->

    <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
      <a class="navbar-brand" href="/"
        ><img
          src="https://i.imgur.com/zIIWIUg.png"
          width="30"
          height="30"
          alt="Italian Trulli"
          style="margin-right: 1px"
        />
        YelpRecord</a
      >
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarCollapse"
        aria-controls="navbarCollapse"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li
            class="nav-item <%= typeof page !== 'undefined' && page === 'recordshops' ? 'active' : '' %>"
          >
            <a class="nav-link" href="/recordshops">Home</a>
          </li>
        </ul>
        <ul class="navbar-nav navbar-right">
          <% if(!currentUser){ %>
          <li
            class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>"
          >
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li
            class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>"
          >
            <a class="nav-link" href="/register">Sign Up</a>
          </li>
          <% } else { %>
          <li class="dropdown">
            <a
              class="nav-link"
              href="#"
              class="dropdown-toggle"
              data-toggle="dropdown"
              role="button"
              aria-haspopup="true"
              aria-expanded="false"
              >Notifications<span class="badge">
                <%=notifications.length%></span
              ></a
            >

            <ul class="dropdown-menu">
              <li class="nav-item">
                <a class="dropdown-item" href="/notifications"
                  >View past notifications</a
                >
              </li>
              <% notifications.forEach(function(notification) { %>
              <li class="nav-item">
                <a
                  class="dropdown-item"
                  href="/notifications/<%=notification.id%>"
                >
                  <%= notification.username %> created a new recordshop
                </a>
              </li>
              <%})%>
            </ul>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/<%= currentUser.id %>"
              >Signed In As <strong><%= currentUser.username %></strong></a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <% } %>
        </ul>
      </div>
    </nav>
    <!-- some comment -->

    <div class="container">
      <% if(error && error.length > 0) { %>
      <div class="alert alert-danger" role="alert"><%= error %></div>
      <% } %> <% if(success && success.length > 0) { %>
      <div class="alert alert-success" role="alert"><%= success %></div>
      <% } %>
    </div>
    <div class="container"></div>
  </body>
</html>
